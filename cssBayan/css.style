* {
    box-sizing: border-box;
}

@media (max-width: 820px) {
    body {
      font-size: 14px;
    }
}

@media (max-width: 320px) {
    body {
      font-size: 12px;
    }
}


body {
    font-family: Arial, Helvetica, sans-serif;
    font-weight: 800;
    background-color: rgba(247, 238, 226, 0.5);
}

div.title {
    font-size: 2em;
    margin: 0px auto;
    max-width: 15em;
    height: 2.4em;
    padding: 0.8em 0px;
    border-bottom: 1px solid rgba(1, 1, 1, 0.2);
} 
